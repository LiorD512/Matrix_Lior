<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/benefit_item_container"
    android:layout_width="@dimen/ListItemWidth"
    android:layout_height="@dimen/ListItemHeight"
    android:layout_marginEnd="10dp">

    <ImageView
        android:id="@+id/benefit_img"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_gravity="bottom">


        <TextView
            android:id="@+id/txt_benefit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom|start"/>

        <TextView
            android:id="@+id/txt_benefit_stitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|start"/>

    </LinearLayout>


</FrameLayout>